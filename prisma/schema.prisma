// prisma/schema.prisma

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id                String    @id @default(cuid())
  name              String
  daycareName       String
  email             String    @unique
  password          String
  emailVerified     DateTime?
  verificationToken String?   @unique
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

// Child model for enrollment
model Child {
  id             String    @id @default(cuid())
  name           String
  dateOfBirth    DateTime
  startDate      DateTime
  program        String
  programType    String
  status         String
  motherName     String
  fatherName     String
  homePhone      String?
  mobilePhone    String
  address        String
  emergencyName  String
  emergencyPhone String
  vaccination    String?
  allergies      String?
  notes          String?
  photoUrl       String?
  photoHint      String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}
