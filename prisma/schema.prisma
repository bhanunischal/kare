// prisma/schema.prisma

generator client {
  provider        = "prisma-client-js"
  // This is the key fix for the LibreSSL environment in Firebase Studio
  binaryTargets   = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Daycare {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  ownerId   String   @unique
  owner     User     @relation(fields: [ownerId], references: [id])

  children Child[]
  staff    Staff[]
  invoices Invoice[]
}

model User {
  id      String   @id @default(cuid())
  email   String   @unique
  name    String?
  daycare Daycare?
}

model Child {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  dob       DateTime
  daycare   Daycare  @relation(fields: [daycareId], references: [id])
  daycareId String

  invoices Invoice[]
}

model Staff {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  role      String
  daycare   Daycare  @relation(fields: [daycareId], references: [id])
  daycareId String
}

model Invoice {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  amount    Float
  status    String // "Paid", "Due", "Overdue"
  dueDate   DateTime
  child     Child    @relation(fields: [childId], references: [id])
  childId   String
  daycare   Daycare  @relation(fields: [daycareId], references: [id])
  daycareId String
}
