// This is a simplified schema for debugging the database connection.
// It establishes the core multi-tenancy relationship.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// A simplified model for the SaaS administrator.
model SaaSAdmin {
  id    String @id @default(cuid())
  email String @unique
  name  String?
}

// Core Daycare model for multi-tenancy.
model Daycare {
  id       String  @id @default(cuid())
  name     String
  status   String // e.g., "Active", "Pending", "Archived"
  plan     String // e.g., "Basic", "Premium"
  children Child[] // Relation to Child model
}

// A simplified model for a child, linked to a Daycare.
model Child {
  id        String  @id @default(cuid())
  name      String
  daycare   Daycare @relation(fields: [daycareId], references: [id], onDelete: Cascade)
  daycareId String
}
