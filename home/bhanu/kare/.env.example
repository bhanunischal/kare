# This is an example file. Copy it to .env and fill in your credentials.

# Firebase Credentials - Get these from your Firebase project console
# (Project Settings > General > Your apps > Web app)
NEXT_PUBLIC_FIREBASE_API_KEY="YOUR_API_KEY"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="YOUR_AUTH_DOMAIN"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="YOUR_PROJECT_ID"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="YOUR_STORAGE_BUCKET"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="YOUR_MESSAGING_SENDER_ID"
NEXT_PUBLIC_FIREBASE_APP_ID="YOUR_APP_ID"

# Resend API Key for sending emails
# Get this from your Resend dashboard (API Keys)
RESEND_API_KEY="YOUR_RESEND_API_KEY"

# This should be the public URL of your application
# Used for generating links in emails
NEXT_PUBLIC_BASE_URL="http://localhost:9002"

# Admin credentials for the /admin section
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="password"

# Database connection string
DATABASE_URL="postgresql://user:password@localhost:5432/db?schema=public"
